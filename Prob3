    "import numpy as np"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [],
   "source": [
    "def present_value(rate: float, cash_flows: np.ndarray) -> float:\n",
    "    price = 0\n",
    "    x = 1\n",
    "    for i in cash_flows:\n",
    "        slice = i / ((1+rate)**x)  \n",
    "        price+=slice\n",
    "        x+=1\n",
    "    return price"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "The price of the bond is: $849.54\n"
     ]
    }
   ],
   "source": [
    "cash_flows = np.empty(40)\n",
    "cash_flows.fill(50)\n",
    "cash_flows[-1] += 1000\n",
    "rate = 0.06\n",
    "price = present_value(rate, cash_flows)\n",
    "print(f\"The price of the bond is: ${price :,.2f}\")"
   ]
  }
